# Application
APP_NAME=RMS Billing Software
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API
API_V1_STR=/api/v1
BACKEND_CORS_ORIGINS=["http://localhost:5173","http://localhost:3000"]

# Database
DATABASE_URL=postgresql+asyncpg://postgres:password@localhost:5432/rms_billing
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=0

# Security
SECRET_KEY=your-secret-key-here-change-in-production-min-32-characters
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Trial Settings
TRIAL_DAYS=14
TRIAL_REMINDER_DAYS=7,12,13

# Subscription Limits (for free tier after trial)
FREE_TIER_INVOICE_LIMIT=10
FREE_TIER_CUSTOMER_LIMIT=50
FREE_TIER_USER_LIMIT=1

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=RMS Billing

# Frontend URL (for email links)
FRONTEND_URL=http://localhost:5173

# Pagination
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
